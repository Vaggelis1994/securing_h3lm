apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
   name: _clusterrolebinding_name
roleRef:
   apiGroup: rbac.authorization.k8s.io
   kind: ClusterRole
   name: _clusterrole_name
subjects:
 - kind: ServiceAccount
   name: _service_account_name
   namespace: _service_account_namespace